@model ModelPlantillas

<h1>Plantilla Hospital Lambda</h1>
<a asp-controller="Hospitales"
   asp-action="Index"
   class="btn btn-danger">
    Volver a Hospitales
</a>

<ul class="list-group">
    <li class="list-group-item">
        Personas: @Model.Personas
    </li>
    <li class="list-group-item">
        Suma Salarial: @Model.SumaSalarial
    </li>
    <li class="list-group-item">
        Media Salarial: @Model.MediaSalarial
    </li>
</ul>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Funcion</th>
            <th>Turno</th>
            <th>Salario</th>
            <th>Hospital</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Plantilla plan in Model.Plantillas)
        {
            <tr>
                <td>@plan.Apellido</td>
                <td>@plan.Funcion</td>
                <td>@plan.Turno</td>
                <td>@plan.Salario</td>
                <td>@plan.IdHospital</td>
            </tr>
        }
    </tbody>
</table>